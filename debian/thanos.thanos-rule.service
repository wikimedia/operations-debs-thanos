[Unit]
Description=Thanos rule
Documentation=https://github.com/thanos-io/thanos/

[Service]
Restart=always
User=thanos
EnvironmentFile=/etc/default/thanos-rule
ExecStart=/usr/bin/thanos rule $ARGS
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no
SyslogIdentifier=%N

[Install]
WantedBy=multi-user.target
